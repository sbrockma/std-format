{
    "compilerOptions": {
        "target": "ES6",
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./dist",
        "lib": [
            "ES2015",
            "DOM"
        ],
        "module": "ES2015",
        "moduleResolution": "bundler",
        "declaration": true,
        "declarationDir": "./dist/temp-types",
        "declarationMap": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "removeComments": false, // Let babel remove comments.
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/index.ts"
    ],
    "exclude": [
        "node-modules",
        "**/*.test.ts",
        "**/*.d.ts"
    ],
    "compileOnSave": false
}
