{
    "name": "@sbrockma/std-format",
    "version": "1.4.2",
    "author": "Stefan Brockmann <stefanprogram@hotmail.com>",
    "private": false,
    "license": "zlib",
    "description": "Simple string formatting library for TS/JS.",
    "homepage": "https://github.com/sbrockma/std-format#readme",
    "repository": "github:sbrockma/std-format",
    "main": "./dist/std-format.cjs.js",
    "module": "./dist/std-format.esm.mjs",
    "browser": "./dist/std-format.umd.js",
    "types": "./dist/std-format.d.ts",
    "exports": {
        ".": {
            "require": "./dist/std-format.cjs.js",
            "import": "./dist/std-format.esm.mjs",
            "browser": "./dist/std-format.umd.js",
            "types": "./dist/std-format.d.ts"
        }
    },
    "dependencies": {
        "jsbi": "^4.3.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.27.0",
        "@babel/core": "^7.26.10",
        "@babel/preset-env": "^7.26.9",
        "@microsoft/api-extractor": "^7.52.5",
        "@types/jasmine": "^5.1.7",
        "@webpack-cli/serve": "^3.0.1",
        "api-extractor": "^99.99.99",
        "babel-loader": "^10.0.0",
        "clean-webpack-plugin": "^4.0.0",
        "jasmine": "^5.6.0",
        "karma": "^6.4.4",
        "karma-chrome-launcher": "^3.2.0",
        "karma-cli": "^2.0.0",
        "karma-jasmine": "^5.1.0",
        "karma-sourcemap-loader": "^0.4.0",
        "karma-webpack": "^5.0.1",
        "npm-watch": "^0.13.0",
        "rimraf": "^6.0.1",
        "terser-webpack-plugin": "^5.3.14",
        "ts-loader": "^9.5.2",
        "typescript": "^5.8.3",
        "webpack": "^5.99.6",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.1"
    },
    "watch": {
        "build:dev": {
            "patterns": [
                "src"
            ],
            "extensions": "ts,tsx",
            "quiet": false
        }
    },
    "scripts": {
        "build:dev": "rimraf dist && webpack --mode development && api-extractor run --local && rimraf dist/temp-types",
        "build:prod": "rimraf dist && webpack --mode production && api-extractor run --local && rimraf dist/temp-types",
        "watch": "npm-watch build:dev",
        "test": "karma start"
    },
    "browserslist": [
        "defaults"
    ]
}
